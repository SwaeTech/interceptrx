generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Secret {
  id             String   @id @default(cuid(2))
  name           String
  encryptedToken String?
  encryptedDek   String?
  blindIndex     String?
  breachCount    Int      @default(0)
  userId         String
  orgId          String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([userId])
  @@index([orgId])
}

model User {
  id        String   @id @default(cuid(2))
  email     String   @unique
  name      String?
  password  String
  scopes    String[]
  orgId     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([email])
  @@index([orgId])
}

model Audit {
  id        String   @id @default(cuid(2))
  secretId  String
  userId    String
  orgId     String
  action    String
  details   String?
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([secretId])
  @@index([orgId])
}
